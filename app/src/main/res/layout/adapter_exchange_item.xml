<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginTop="@dimen/low_margin"
    android:layout_marginBottom="@dimen/low_margin"
    android:background="@drawable/shape_button_gradient_blue_rounded"
    android:paddingLeft="@dimen/medium_margin"
    android:paddingTop="@dimen/default_margin"
    android:paddingRight="@dimen/medium_margin"
    android:paddingBottom="@dimen/default_margin">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="70dp"
            android:layout_marginRight="@dimen/medium_margin">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_alert_gold" />

        </androidx.cardview.widget.CardView>

        <com.example.rtc_currency.components.RTCText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binance"
            android:textSize="@dimen/huge_font" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/default_margin">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_star_rank" />

        <com.example.rtc_currency.components.RTCText
            android:id="@+id/text_rank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/high_font" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_founded_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_rank"
        android:layout_marginTop="@dimen/low_margin"
        android:gravity="center">

        <com.example.rtc_currency.components.RTCText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/low_margin"
            android:text="@string/founded_in"
            android:textSize="@dimen/high_font" />

        <com.example.rtc_currency.components.RTCText
            android:id="@+id/text_year_founded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/low_margin"
            android:text="2017"
            android:textSize="@dimen/high_font" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_founded_in"
        android:layout_marginTop="@dimen/low_margin"
        android:gravity="center">

        <com.example.rtc_currency.components.RTCText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/low_margin"
            android:text="@string/live_at"
            android:textSize="@dimen/high_font" />

        <com.example.rtc_currency.components.RTCText
            android:id="@+id/text_live_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/low_margin"
            android:text="China "
            android:textSize="@dimen/high_font" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/area_country"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/low_margin"
        android:src="@drawable/ic_star" />

</RelativeLayout>